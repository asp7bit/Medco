<table>
  <tr>
    <th><%= sortable "no", "No" %></th>
    <th><%= sortable "kode", "Kode" %></th>
    <th><%= sortable "keterangan", "Keterangan" %></th>
    <th colspan="2">Action</th>
  </tr>

<% @tanahs.each_with_index do |tanah, idx| %>
  <tr>
    <td><%= params[:page].nil? ? idx + 1 : 15 * (params[:page].to_i  - 1) + idx + 1 %></td>
    <td><%= tanah.kode %></td>
    <td><%= tanah.keterangan %></td>
    <td><%= link_to 'Edit', edit_tanah_path(tanah) %></td>
    <td><%= link_to 'Delete', tanah, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
  <div class="pagination">
   <%= will_paginate @tanahs %>
  </div>
<br />

